package exersice1;

import java.util.Scanner;

public class SumOfCubesOfDigits {

	public static void main(String[] args) {
		
		Scanner scn= new Scanner(System.in);
		System.out.println("Enter a number: ");
		int n= scn.nextInt();
		System.out.println("Sum of the cubes of the digits of the number "+n+" is: "+displaySum(n));

	}
	
	public static int displaySum(int n) {
		
		int sum=0;
		int count;
		while(n>0) {
			count++;
			int digit= n%10;
			sum=sum+(int)Math.pow(digit, count);
			n/=10;
		}
		return sum;
	}

}
