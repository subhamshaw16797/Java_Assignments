package exercise6;

import java.util.Scanner;

public class NaturalNumbersDifference {

	public static void main(String[] args) {
		
		Scanner scn= new S

	}
	
	static int calculateDifference(int n) {
		int sum1=0;
		int sum2=0;
		int difference=0;
		for(int i=0; i<=n;i++) {
			sum1 += (i*i);
			sum2 += i;
		}
		int squareOfSum=(sum2*sum2);
		difference= sum1-squareOfSum;
		return difference;
		
	}

}
